{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true, // Garantindo que as verificações de tipo sejam mais rigorosas
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}
